<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SchoolApi</title>
    @Styles.Render("~/css/customCSS")
    <!-- BOOTSTRAP CDN CSS-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- We will load jquery here because our custom scripts depend on it and it needs to be fully loaded.-->
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">#</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item ">
                    @Html.ActionLink("Index", "Index", "Home", new { Area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item ">
                    @Html.ActionLink("Students", "Student", "Home", new { Area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item ">
                    @Html.ActionLink("Teachers", "Teacher", "Home", new { Area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item ">
                    @Html.ActionLink("Api", "Index", "Help", new { Area = "HelpPage" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About me", "AboutMe", "Home", new { Area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="fixed-bottom text-center">github.com/BackNot </footer>

    </div>
    <!-- jQuery , Bootstrap CDN-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/customJS")
</body>
</html>
